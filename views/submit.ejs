<%- include('partials/header') %>

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
    <div class="text-center space-y-6 bg-white shadow-lg rounded-lg p-8 max-w-md mx-auto">
        <i class="fas fa-key text-indigo-600 text-6xl"></i>
        <h1 class="text-4xl font-bold text-gray-900">Secrets</h1>
        <p class="text-gray-600">Don't keep your secrets, share them anonymously!</p>

        <form action="/submit" method="POST" class="space-y-4">
        <div>
            <input type="text" name="secret" class="w-full px-4 py-2 border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-400 text-center" placeholder="What's your secret?" required>
        </div>
        <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow hover:bg-indigo-700 transition ease-in-out duration-300">
            Submit
        </button>
        </form>
    </div>
</div>

